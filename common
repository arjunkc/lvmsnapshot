#configuration
CONF=conf

function separator {
  echo "--- $@ ---"
}

function inform {
  echo -e "\nInfo:\n\n$@"
}

function warning {
  echo -e "\nWarning:\n\n$@"
}

function error {
  echo -e "\nSorry. A fatal error occured:\n\n$@"
  exit -1
}

function checkmount {
  LINES=`mount | grep $@ | wc -l`
  if [ $LINES -gt 0 ]; then
    return 1
  else
    return 0
  fi
}

if [ -z $1 ]; then
  echo "Please specify a LVM Volume name."
  exit 1
fi

# read configuration
if [ ! -f "$CONF" ] ; then
  error "'$CONF' not found."
elif [ ! -r "$CONF" ] ; then
  error "'$CONF' not readable."
else
  . $CONF
fi

LVMVOLUME=$LVMPATH/$1-disk
LVMSNAPSHOT=$1-disk-snapshot-$IDENTIFIER
SNAPSHOTMOUNT=$MOUNTPATH/$LVMSNAPSHOT